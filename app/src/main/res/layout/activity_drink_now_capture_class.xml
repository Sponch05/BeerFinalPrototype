<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hacktheworld.beerfinalprototype.DrinkNowCaptureClass"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/Beer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="0dp">

                        <SeekBar
                            android:id="@+id/glassSizeSeekUI"
                            style="@style/Widget.AppCompat.SeekBar.Discrete"
                            android:layout_width="380dp"
                            android:layout_height="27dp"
                            android:max="100"
                            android:progress="3"
                            tools:layout_editor_absoluteX="2dp"
                            tools:layout_editor_absoluteY="264dp" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="158dp"
                            android:layout_height="143dp"
                            app:srcCompat="@android:drawable/ic_menu_myplaces"
                            tools:layout_editor_absoluteX="113dp"
                            tools:layout_editor_absoluteY="73dp" />

                        <Spinner
                            android:id="@+id/alcTypeSpinner"
                            android:layout_width="97dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            tools:layout_editor_absoluteX="144dp"
                            tools:layout_editor_absoluteY="22dp" />

                        <TextView
                            android:id="@+id/beerVolTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Percentage"
                            tools:layout_editor_absoluteX="157dp"
                            tools:layout_editor_absoluteY="247dp" />

                        <TextView
                            android:id="@+id/drinkCountTxtV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drinks had so far"
                            tools:layout_editor_absoluteX="140dp"
                            tools:layout_editor_absoluteY="334dp" />

                        <SeekBar
                            android:id="@+id/beerVolSeekUI"
                            style="@style/Widget.AppCompat.SeekBar.Discrete"
                            android:layout_width="362dp"
                            android:layout_height="29dp"
                            tools:layout_editor_absoluteX="11dp"
                            tools:layout_editor_absoluteY="351dp" />

                        <Button
                            android:id="@+id/drinkBtn"
                            android:layout_width="360dp"
                            android:layout_height="43dp"
                            android:text="Drink Now !"
                            android:visibility="visible"
                            tools:layout_editor_absoluteX="11dp"
                            tools:layout_editor_absoluteY="396dp" />

                        <TextView
                            android:id="@+id/glassSizeTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Glass Size"
                            tools:layout_editor_absoluteX="48dp"
                            tools:layout_editor_absoluteY="120dp" />

                        <TextView
                            android:id="@+id/bacLevelTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BAC Level"
                            tools:layout_editor_absoluteX="271dp"
                            tools:layout_editor_absoluteY="120dp" />

                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Spirits"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Wine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>


</FrameLayout>
