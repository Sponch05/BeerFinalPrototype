<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hacktheworld.beerfinalprototype.DrinkNowCaptureClass"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/Beer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <SeekBar
                            android:id="@+id/glassSizeSeekUI"
                            style="@style/Widget.AppCompat.SeekBar.Discrete"
                            android:layout_width="380dp"
                            android:layout_height="27dp"
                            android:max="100"
                            android:progress="3"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            tools:layout_editor_absoluteY="264dp" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="158dp"
                            android:layout_height="143dp"
                            app:srcCompat="@android:drawable/ic_menu_myplaces"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginBottom="48dp"
                            app:layout_constraintBottom_toTopOf="@+id/glassSizeSeekUI" />

                        <Spinner
                            android:id="@+id/alcTypeSpinner"
                            android:layout_width="97dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="26dp"
                            android:visibility="visible"
                            app:layout_constraintBottom_toTopOf="@+id/imageView"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintVertical_bias="0.947"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent" />

                        <TextView
                            android:id="@+id/beerVolTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:text="Percentage"
                            app:layout_constraintTop_toBottomOf="@+id/glassSizeSeekUI"
                            tools:layout_editor_absoluteX="157dp" />

                        <TextView
                            android:id="@+id/drinkCountTxtV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Drinks had so far"
                            app:layout_constraintTop_toBottomOf="@+id/beerVolTxt"
                            tools:layout_editor_absoluteX="140dp" />

                        <SeekBar
                            android:id="@+id/beerVolSeekUI"
                            android:layout_width="362dp"
                            android:layout_height="29dp"
                            tools:layout_editor_absoluteX="11dp"
                            tools:layout_editor_absoluteY="351dp" />

                        <Button
                            android:id="@+id/drinkBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drink Now !"
                            android:visibility="visible"
                            tools:layout_editor_absoluteX="148dp"
                            tools:layout_editor_absoluteY="391dp" />

                        <TextView
                            android:id="@+id/glassSizeTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Glass Size"
                            tools:layout_editor_absoluteY="120dp"
                            app:layout_constraintRight_toLeftOf="@+id/imageView"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent" />

                        <TextView
                            android:id="@+id/bacLevelTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            app:layout_constraintLeft_toRightOf="@+id/imageView"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="120dp"
                            app:layout_constraintHorizontal_bias="0.703" />

                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Spirits"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Wine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>


</FrameLayout>
